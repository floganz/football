<h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p>
<%= flash[:notice] %>
<p>Fill the form below</p>

<%= form_tag(:users, method: "post") do %>
	<%= label(:user, :name) %>
	<%= text_field(:user, :name) %>
	<%= label(:user, :surname) %>
	<%= text_field(:user, :surname) %>
	<%= label(:user, :email) %>
	<%= text_field(:user, :email) %>
	<%= label(:user, :photo) %>
	<%= text_field(:user, :photo) %>
	<%= submit_tag("Register") %>
<% end %>